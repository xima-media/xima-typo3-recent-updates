{
	"name": "xima/xima-typo3-recent-updates",
	"description": "A widget for the dashboard to display new and recently updated elements.",
	"license": [
		"GPL-2.0-or-later"
	],
	"type": "typo3-cms-extension",
	"authors": [
		{
			"name": "Konrad Michalik",
			"email": "konrad.michalik@xima.de",
			"role": "Developer"
		},
		{
			"name": "XIMA MEDIA GmbH",
			"email": "kontakt@xima.de"
		}
	],
	"require": {
		"php": "^8.1",
		"typo3/cms-backend": "^11.5 || ^12.4 || ^13.4",
		"typo3/cms-core": "^11.5 || ^12.4 || ^13.4",
		"typo3/cms-dashboard": "^11.5 || ^12.4 || ^13.4"
	},
	"require-dev": {
		"armin/editorconfig-cli": "^1.0 || ^2.0",
		"eliashaeussler/php-cs-fixer-config": "2.3.0",
		"ergebnis/composer-normalize": "^2.44",
		"friendsofphp/php-cs-fixer": "^3.52",
		"helhum/typo3-console": "^8.1",
		"helmich/typo3-typoscript-lint": "^3.2",
		"phpstan/phpstan-deprecation-rules": "^1.0 || ^2.0",
		"phpstan/phpstan-strict-rules": "^1.0 || ^2.0",
		"roave/security-advisories": "dev-latest",
		"saschaegerer/phpstan-typo3": "^1.10 || ^2.0",
		"spaze/phpstan-disallowed-calls": "^4.0",
		"ssch/typo3-rector": "^2.0 || ^3.0",
		"symfony/translation": "^6.3 || ^7.0",
		"tomasvotruba/type-coverage": "^1.0 || ^2.0",
		"typo3/cms-base-distribution": "^11.5 || ^12.4 || ^13.4",
		"typo3/cms-lowlevel": "^11.5 || ^12.4 || ^13.4",
		"typo3/coding-standards": "^0.7 || ^0.8"
	},
	"autoload": {
		"psr-4": {
			"Xima\\XimaTypo3RecentUpdates\\": "Classes/"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true,
			"helhum/dotenv-connector": true,
			"php-http/discovery": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"lock": false,
		"sort-packages": true
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"extension-key": "xima_typo3_recent_updates",
			"web-dir": "public"
		}
	},
	"scripts": {
		"fix": [
			"@fix:composer",
			"@fix:editorconfig",
			"@fix:php"
		],
		"fix:composer": "@composer normalize",
		"fix:editorconfig": "@lint:editorconfig --fix",
		"fix:php": "php vendor/bin/php-cs-fixer --config=php-cs-fixer.php fix",
		"lint": [
			"@lint:composer",
			"@lint:editorconfig",
			"@lint:php",
			"@lint:typoscript",
			"@lint:yaml"
		],
		"lint:composer": "@fix:composer --dry-run",
		"lint:editorconfig": "ec --git-only",
		"lint:php": "@fix:php --dry-run",
		"lint:typoscript": "typoscript-lint --fail-on-warnings",
		"lint:yaml": "find ./ ! -path './vendor/*' ! -path '*/node_modules/*' ! -path './.Build/*' ! -path './xima_typo3_content_planner/*' \\( -name '*.yaml' -o -name '*.yml' \\) | xargs -r yaml-lint",
		"migration": [
			"@migration:rector"
		],
		"migration:rector": "rector process -c rector.php",
		"sca": [
			"@sca:php"
		],
		"sca:php": "phpstan analyse --memory-limit=2G"
	}
}
